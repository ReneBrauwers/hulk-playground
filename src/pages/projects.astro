---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Projects';
const description = 'This page is deprecated. Everything moved to the homepage.';

// Static sites don’t do HTTP 301s; this is a lightweight, human-friendly redirect.
const home = `${import.meta.env.BASE_URL}`;
---

<BaseLayout title={title} description={description}>
	<section class="card">
		<p class="meta">Moved</p>
		<h1>Projects moved to Home</h1>
		<p>
			The website is intentionally small now: projects + latest activity live on
			the homepage.
		</p>
		<div class="actions">
			<a class="button" href={home}>Go to Home</a>
		</div>
		<p class="meta">
			If you landed here from an old link, you’re not lost — it’s just simpler
			now.
		</p>
	</section>
</BaseLayout>
