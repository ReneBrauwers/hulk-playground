---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Projects';
const description = 'A tight snapshot of recent work.';
const projects = [
	{
		name: 'Atlas UI',
		note: 'Component system for fast, consistent releases.',
		status: 'Design systems',
	},
	{
		name: 'Signal Boards',
		note: 'Product dashboard focused on clarity over noise.',
		status: 'Product UX',
	},
	{
		name: 'Field Notes',
		note: 'Research memos distilled into quick reads.',
		status: 'Content design',
	},
];
---

<BaseLayout title={title} description={description}>
	<section class="card">
		<p class="meta">Selected</p>
		<h1>Projects</h1>
		<p>
			Small, focused work with just enough context. Replace these entries with
			your real project list.
		</p>
	</section>
	<section class="grid">
		{projects.map((project) => (
			<article>
				<h2>{project.name}</h2>
				<p>{project.note}</p>
				<p class="meta">{project.status}</p>
			</article>
		))}
	</section>
	<section class="card">
		<h2>Want more detail?</h2>
		<p>
			Link out to case studies, GitHub repos, or deeper write-ups. Keep it
			short and let the work speak.
		</p>
		<div class="actions">
			<a class="button" href="mailto:hello@example.com">Get in touch</a>
		</div>
	</section>
</BaseLayout>
