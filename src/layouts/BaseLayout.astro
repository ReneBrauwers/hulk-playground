---
const { title, description } = Astro.props;
const pageTitle = title ? `${title} 路 Hulk Playground` : 'Hulk Playground';
const metaDescription =
	description ?? 'Lean Astro scaffold built for GitHub Pages.';
const baseUrl = import.meta.env.BASE_URL;
const site = Astro.site ?? new URL('https://example.com');
const ogImage = new URL(`${baseUrl}avatar.svg`, site).toString();
const ogUrl = new URL(baseUrl, site).toString();
const navLinks = [
	{ label: 'Home', href: `${baseUrl}` },
	{ label: 'About', href: `${baseUrl}about/` },
];
const year = new Date().getFullYear();
// Render-time timestamp (Sydney time) to show when the site was last built.
const lastUpdated = new Date().toLocaleString('en-AU', {
	timeZone: 'Australia/Sydney',
	weekday: undefined,
	year: 'numeric',
	month: '2-digit',
	day: '2-digit',
	hour: '2-digit',
	minute: '2-digit',
	hour12: false,
});
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="description" content={metaDescription} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@300;400;500&family=Rajdhani:wght@500;600;700&display=swap"
		/>
		<meta property="og:type" content="website" />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={metaDescription} />
		<meta property="og:url" content={ogUrl} />
		<meta property="og:image" content={ogImage} />
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:title" content={pageTitle} />
		<meta name="twitter:description" content={metaDescription} />
		<meta name="twitter:image" content={ogImage} />
		<link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
		<link rel="icon" href={`${baseUrl}favicon.ico`} />
	</head>
	<body>
		<div class="page">
			<div class="page-noise" aria-hidden="true"></div>
			<header class="site-header">
				<a class="brand" href={`${baseUrl}`}>
					<img class="brand-mark" src={`${baseUrl}avatar.svg`} alt="" />
					<span>Hulk Playground</span>
				</a>
				<nav class="site-nav">
					{navLinks.map((link) => (
						<a href={link.href}>{link.label}</a>
					))}
				</nav>
			</header>
			<main>
				<slot />
			</main>
			<footer class="site-footer">
				<p>Built with Astro 路 {year} 路 Hulk approved</p>
				<p class="footer-updated">Last updated: {lastUpdated}</p>
				<p>
					<a href="https://astro.build">Astro Docs</a>
					<span aria-hidden="true">路</span>
					<a href="https://pages.github.com/">GitHub Pages</a>
				</p>
			</footer>
		</div>
	</body>
</html>

<style>
	:global(:root) {
		color-scheme: dark;
		--bg: #0b0e13;
		--surface: #121821;
		--surface-strong: #161f2a;
		--ink: #f1f5f9;
		--muted: #9aa4b2;
		--accent: #f5c25b;
		--accent-soft: rgba(245, 194, 91, 0.16);
		--border: rgba(148, 163, 184, 0.18);
		--shadow: 0 20px 50px rgba(6, 10, 16, 0.6);
		--radius: 18px;
		--max-width: 1040px;
		--font-body: "IBM Plex Sans", "Segoe UI", sans-serif;
		--font-display: "Rajdhani", "Segoe UI", sans-serif;
		--grid: rgba(148, 163, 184, 0.08);
	}

	:global(*) {
		box-sizing: border-box;
	}

	:global(body) {
		margin: 0;
		font-family: var(--font-body);
		background:
			repeating-linear-gradient(
				0deg,
				transparent,
				transparent 22px,
				var(--grid) 23px
			),
			repeating-linear-gradient(
				90deg,
				transparent,
				transparent 22px,
				var(--grid) 23px
			),
			radial-gradient(1200px circle at 15% 10%, #1e2a37 0%, #0b0e13 55%);
		color: var(--ink);
		line-height: 1.6;
		position: relative;
	}

	:global(a) {
		color: inherit;
		text-decoration: none;
	}

	:global(img) {
		max-width: 100%;
		display: block;
	}

	.page {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		position: relative;
	}

	.page-noise {
		position: fixed;
		inset: 0;
		pointer-events: none;
		opacity: 0.35;
		background-image: radial-gradient(circle, rgba(255, 255, 255, 0.06) 1px, transparent 1px);
		background-size: 3px 3px;
		mix-blend-mode: soft-light;
		z-index: 0;
	}

	.site-header {
		max-width: var(--max-width);
		margin: 32px auto 0;
		width: min(100%, var(--max-width));
		padding: 20px 24px;
		background: linear-gradient(140deg, rgba(18, 24, 33, 0.9), rgba(22, 31, 42, 0.95));
		border-radius: var(--radius);
		border: 1px solid var(--border);
		box-shadow: var(--shadow);
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: space-between;
		gap: 16px;
		position: relative;
		z-index: 1;
	}

	.brand {
		font-family: var(--font-display);
		font-size: 1.2rem;
		letter-spacing: 0.02em;
		display: inline-flex;
		align-items: center;
		gap: 12px;
	}

	.brand-mark {
		width: 28px;
		height: 28px;
		filter: drop-shadow(0 0 8px rgba(245, 194, 91, 0.35));
	}

	.site-nav {
		display: flex;
		gap: 18px;
		font-size: 0.95rem;
	}

	.site-nav a {
		padding: 6px 10px;
		border-radius: 999px;
		border: 1px solid transparent;
		transition: border-color 0.2s ease, background 0.2s ease;
	}

	.site-nav a:hover,
	.site-nav a:focus-visible {
		border-color: rgba(245, 194, 91, 0.4);
		background: var(--accent-soft);
	}

	main {
		width: min(100%, var(--max-width));
		margin: 48px auto 0;
		padding: 0 24px 72px;
		flex: 1;
		position: relative;
		z-index: 1;
	}

	.site-footer {
		border-top: 1px solid var(--border);
		padding: 28px 24px 40px;
		text-align: center;
		color: var(--muted);
		font-size: 0.9rem;
		position: relative;
		z-index: 1;
	}

	.site-footer p {
		margin: 4px 0;
	}

	.footer-updated {
		font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono",
			"Courier New", monospace;
		font-size: 0.85rem;
		opacity: 0.9;
	}

	.site-footer a {
		color: var(--accent);
		font-family: var(--font-display);
		font-size: 0.85rem;
		letter-spacing: 0.02em;
	}

	.site-footer span {
		margin: 0 8px;
	}

	:global(h1, h2, h3) {
		font-family: var(--font-display);
		line-height: 1.2;
		margin: 0 0 12px;
	}

	:global(p) {
		margin: 0 0 16px;
		color: var(--muted);
	}

	:global(.hero) {
		background: linear-gradient(140deg, rgba(18, 24, 33, 0.96), rgba(12, 16, 23, 0.98));
		padding: 48px;
		border-radius: calc(var(--radius) + 8px);
		border: 1px solid var(--border);
		box-shadow: var(--shadow);
		position: relative;
		overflow: hidden;
		display: grid;
		gap: 18px;
	}

	:global(.hero::after) {
		content: '';
		position: absolute;
		inset: -40% 0 0 40%;
		background: radial-gradient(circle, rgba(245, 194, 91, 0.18), transparent 65%);
		opacity: 0.7;
		pointer-events: none;
	}

	:global(.hero h1) {
		color: var(--ink);
		font-size: clamp(2rem, 2.6vw, 3rem);
	}

	:global(.hero .hero-top) {
		display: flex;
		align-items: center;
		gap: 12px;
		position: relative;
		z-index: 1;
	}

	:global(.hero .hero-mark) {
		width: 52px;
		height: 52px;
		background: rgba(10, 14, 19, 0.6);
		border: 1px solid rgba(245, 194, 91, 0.3);
		border-radius: 16px;
		display: grid;
		place-items: center;
		box-shadow: inset 0 0 18px rgba(245, 194, 91, 0.12);
	}

	:global(.hero .hero-mark img) {
		width: 32px;
		height: 32px;
		filter: drop-shadow(0 0 10px rgba(245, 194, 91, 0.35));
	}

	:global(.eyebrow) {
		font-family: var(--font-display);
		text-transform: uppercase;
		letter-spacing: 0.2em;
		font-size: 0.7rem;
		color: var(--accent);
		margin-bottom: 16px;
	}

	:global(.lede) {
		font-size: 1.05rem;
		max-width: 46ch;
	}

	:global(.actions) {
		display: flex;
		gap: 12px;
		flex-wrap: wrap;
		margin-top: 24px;
	}

	:global(.button) {
		font-family: var(--font-display);
		background: var(--accent);
		color: #1b1a16;
		padding: 10px 18px;
		border-radius: 999px;
		font-size: 0.9rem;
		letter-spacing: 0.02em;
		border: 1px solid transparent;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	:global(.button:hover) {
		transform: translateY(-1px);
		box-shadow: 0 12px 22px rgba(245, 194, 91, 0.35);
	}

	:global(.button.ghost) {
		background: transparent;
		border-color: rgba(245, 194, 91, 0.6);
		color: var(--accent);
	}

	:global(.grid) {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 18px;
		margin-top: 28px;
	}

	:global(.stack) {
		display: grid;
		gap: 24px;
	}

	:global(.grid article) {
		background: rgba(18, 24, 33, 0.9);
		border: 1px solid var(--border);
		padding: 20px;
		border-radius: 14px;
		box-shadow: 0 16px 30px rgba(6, 10, 16, 0.35);
	}

	:global(.card) {
		background: var(--surface-strong);
		border: 1px solid var(--border);
		border-radius: 16px;
		padding: 24px;
		box-shadow: var(--shadow);
	}

	:global(.meta) {
		font-family: var(--font-display);
		font-size: 0.8rem;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: var(--accent);
	}

	:global(ul.clean) {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: 12px;
	}

	:global(ul.clean li) {
		padding: 14px 16px;
		border: 1px solid var(--border);
		border-radius: 12px;
		background: rgba(18, 24, 33, 0.82);
	}

	@media (max-width: 720px) {
		.site-header {
			padding: 18px 18px;
		}

		.site-nav {
			width: 100%;
			justify-content: space-between;
		}

		main {
			margin-top: 32px;
			padding: 0 18px 56px;
		}

		:global(.hero) {
			padding: 32px 24px;
		}
	}
</style>
