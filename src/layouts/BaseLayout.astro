---
const { title, description } = Astro.props;
const pageTitle = title ? `${title} 路 Hulk Playground` : 'Hulk Playground';
const metaDescription =
	description ?? 'Lean Astro scaffold built for GitHub Pages.';
const baseUrl = import.meta.env.BASE_URL;
const navLinks = [
	{ label: 'Home', href: `${baseUrl}` },
	{ label: 'About', href: `${baseUrl}about/` },
	{ label: 'Projects', href: `${baseUrl}projects/` },
];
const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="description" content={metaDescription} />
		<link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
		<link rel="icon" href={`${baseUrl}favicon.ico`} />
	</head>
	<body>
		<div class="page">
			<header class="site-header">
				<a class="brand" href={`${baseUrl}`}>Hulk Playground</a>
				<nav class="site-nav">
					{navLinks.map((link) => (
						<a href={link.href}>{link.label}</a>
					))}
				</nav>
			</header>
			<main>
				<slot />
			</main>
			<footer class="site-footer">
				<p>Built with Astro 路 {year} 路 Hulk approved</p>
				<p>
					<a href="https://astro.build">Astro Docs</a>
					<span aria-hidden="true">路</span>
					<a href="https://pages.github.com/">GitHub Pages</a>
				</p>
			</footer>
		</div>
	</body>
</html>

<style>
	:global(:root) {
		color-scheme: light;
		--bg: #f6f4ef;
		--surface: #ffffff;
		--ink: #111314;
		--muted: #5c5f62;
		--accent: #1a4a5f;
		--accent-soft: rgba(26, 74, 95, 0.12);
		--border: rgba(17, 19, 20, 0.12);
		--shadow: 0 18px 40px rgba(17, 19, 20, 0.08);
		--radius: 18px;
		--max-width: 1040px;
		--font-body: "Literata", "Garamond", "Georgia", serif;
		--font-display: "Space Grotesk", "Trebuchet MS", sans-serif;
	}

	:global(*) {
		box-sizing: border-box;
	}

	:global(body) {
		margin: 0;
		font-family: var(--font-body);
		background: radial-gradient(
			1200px circle at 10% 10%,
			#ffffff 0%,
			#f6f4ef 40%,
			#f1ede6 100%
		);
		color: var(--ink);
		line-height: 1.6;
	}

	:global(a) {
		color: inherit;
		text-decoration: none;
	}

	:global(img) {
		max-width: 100%;
		display: block;
	}

	.page {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	.site-header {
		max-width: var(--max-width);
		margin: 32px auto 0;
		width: min(100%, var(--max-width));
		padding: 20px 24px;
		background: var(--surface);
		border-radius: var(--radius);
		border: 1px solid var(--border);
		box-shadow: var(--shadow);
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: space-between;
		gap: 16px;
	}

	.brand {
		font-family: var(--font-display);
		font-size: 1.2rem;
		letter-spacing: 0.02em;
	}

	.site-nav {
		display: flex;
		gap: 18px;
		font-size: 0.95rem;
	}

	.site-nav a {
		padding: 6px 10px;
		border-radius: 999px;
		border: 1px solid transparent;
		transition: border-color 0.2s ease, background 0.2s ease;
	}

	.site-nav a:hover,
	.site-nav a:focus-visible {
		border-color: var(--border);
		background: var(--accent-soft);
	}

	main {
		width: min(100%, var(--max-width));
		margin: 48px auto 0;
		padding: 0 24px 72px;
		flex: 1;
	}

	.site-footer {
		border-top: 1px solid var(--border);
		padding: 28px 24px 40px;
		text-align: center;
		color: var(--muted);
		font-size: 0.9rem;
	}

	.site-footer p {
		margin: 4px 0;
	}

	.site-footer a {
		color: var(--accent);
		font-family: var(--font-display);
		font-size: 0.85rem;
		letter-spacing: 0.02em;
	}

	.site-footer span {
		margin: 0 8px;
	}

	:global(h1, h2, h3) {
		font-family: var(--font-display);
		line-height: 1.2;
		margin: 0 0 12px;
	}

	:global(p) {
		margin: 0 0 16px;
		color: var(--muted);
	}

	:global(.hero) {
		background: var(--surface);
		padding: 48px;
		border-radius: calc(var(--radius) + 8px);
		border: 1px solid var(--border);
		box-shadow: var(--shadow);
	}

	:global(.hero h1) {
		color: var(--ink);
		font-size: clamp(2rem, 2.6vw, 3rem);
	}

	:global(.eyebrow) {
		font-family: var(--font-display);
		text-transform: uppercase;
		letter-spacing: 0.2em;
		font-size: 0.7rem;
		color: var(--accent);
		margin-bottom: 16px;
	}

	:global(.lede) {
		font-size: 1.05rem;
		max-width: 46ch;
	}

	:global(.actions) {
		display: flex;
		gap: 12px;
		flex-wrap: wrap;
		margin-top: 24px;
	}

	:global(.button) {
		font-family: var(--font-display);
		background: var(--accent);
		color: #fefcf8;
		padding: 10px 18px;
		border-radius: 999px;
		font-size: 0.9rem;
		letter-spacing: 0.02em;
		border: 1px solid transparent;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	:global(.button:hover) {
		transform: translateY(-1px);
		box-shadow: 0 10px 20px rgba(26, 74, 95, 0.2);
	}

	:global(.button.ghost) {
		background: transparent;
		border-color: var(--accent);
		color: var(--accent);
	}

	:global(.grid) {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 18px;
		margin-top: 28px;
	}

	:global(.grid article) {
		background: rgba(255, 255, 255, 0.7);
		border: 1px solid var(--border);
		padding: 20px;
		border-radius: 14px;
	}

	:global(.card) {
		background: var(--surface);
		border: 1px solid var(--border);
		border-radius: 16px;
		padding: 24px;
		box-shadow: var(--shadow);
	}

	:global(.meta) {
		font-family: var(--font-display);
		font-size: 0.8rem;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: var(--accent);
	}

	:global(ul.clean) {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: 12px;
	}

	:global(ul.clean li) {
		padding: 14px 16px;
		border: 1px solid var(--border);
		border-radius: 12px;
		background: rgba(255, 255, 255, 0.65);
	}

	@media (max-width: 720px) {
		.site-header {
			padding: 18px 18px;
		}

		.site-nav {
			width: 100%;
			justify-content: space-between;
		}

		main {
			margin-top: 32px;
			padding: 0 18px 56px;
		}

		:global(.hero) {
			padding: 32px 24px;
		}
	}
</style>
